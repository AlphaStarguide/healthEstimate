    <div id="{{id}}" class="{{classes}}" data-appid="{{appId}}">
    <span class="estimation" style="
                {{#if status.showColor}}
                    text-shadow: 0 0 10px {{status.colorShadow}};
                    color: {{status.color}};
                    background-color: rgba(0,0,0,0.6);
                {{else}}
                    color: #FFF;
                    text-outline: black 5px 5px;
                    text-shadow:
                        -1px -1px 0 #000,
                        0    -1px 0 #000,
                        1px -1px 0 #000,
                        1px   0   0 #000,
                        1px   1px 0 #000,
                        0     1px 0 #000,
                        -1px  1px 0 #000,
                        -1px  0   0 #000;
                {{/if}}
            ">
        {{status.desc}}
    </span>
</div>
